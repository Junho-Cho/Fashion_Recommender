<div class="container" style="margin-top: 130px; margin-bottom: 30px;">
  <i class="fas fa-address-card fa-5x" style="color: #5882FA;"></i><br><br>
  <h2>마이 페이지</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    
    <div class="form-row">
      <fieldset disabled>
        <div class="form-group" style="margin-left: 5px; margin-right: 20px; width: 380px;">
          <%= f.label :name, "name" %><br />
          <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
        </div>
      </fieldset>

      <div class="form-group" style="width: 400px;">
        <%= f.label :nickname, "닉네임" %><br />
        <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control" %>
      </div>
    </div>

    <fieldset disabled>
      <div class="form-group" style="max-width: 800px;">
        <%= f.label :email, "이메일" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </fieldset>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-row">
      <div class="form-group" style="margin-left: 5px; margin-right: 20px; width: 380px;">
        <%= f.label :password, "패스워드 변경" %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        <% if @minimum_password_length %>
          <span style="text-decoration: underline";>(<%= @minimum_password_length %>글자 이상)</span>
        <% end %>
      </div>

      <div class="form-group" style="width: 400px">
        <%= f.label :password_confirmation, "패스워드 변경 확인" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="staticLevel" class="col-sm-1 col-form-label">레벨</label>
      <div class="col-sm-10">
        <input type="text" readonly class="form-control-plaintext" id="staticLevel" value="<%=current_user.level%>">
      </div>
    </div>

    <div class="progress" style="max-width: 800px; margin-top: -20px; margin-bottom: 20px;">
      <div class="progress-bar progress-bar-striped bg-success progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%;"></div>
    </div>

    <div class="form-group" style="width: 380px">
      <%= f.label :current_password, "현재 패스워드 (개인정보 변경 확인용)" %><br />
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions" style="margin-top: 10px; margin-bottom: 10px;">
      <%= f.submit "저장", class: "btn btn-secondary" %>
    </div>
    <% end %>
</div>

<div class="container">
  <div class="form-row">
    <i class="fas fa-cut fa-2x" style="color: #F5DA81; margin-right: 20px;"></i>
    <h3>회원탈퇴</h3>
  </div>

  <p><%= button_to "회원탈퇴", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-secondary" %></p>
  

  <!--<%= link_to "Back", :back %>-->

</div>
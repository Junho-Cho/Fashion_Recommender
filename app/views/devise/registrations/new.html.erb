<div class="container" style="margin-top: 130px; margin-bottom: 30px; text-align: center;">
  <i class="fas fa-user-plus fa-5x" style="color: #01DF01;"></i><br><br>
  <h2>회원가입</h2>
</div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-row" style="max-width: 500px; margin: 0 auto">
      <div class="form-group col-md-6">
        <%= f.label :name, "이름" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :nickname, "닉네임" %>
        <%= f.text_field :nickname, autocomplete: "nickname", class: "form-control" %>
      </div>
    </div>

      <div class="form-group" style="max-width: 490px; margin: 0 auto; margin-bottom: 20px;">
        <%= f.label :email, "이메일" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

    <div class="form-row" style="max-width: 500px; margin: 0 auto">
      <div class="form-group col-md-6">
        <%= f.label :password, "패스워드" %>
        <% if @minimum_password_length %>
        <span style="text-decoration: underline";>(<%= @minimum_password_length %>글자 이상)</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :password_confirmation, "패스워드 확인" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>

<div class="container" style="text-align: center">
    <div class="actions" style="margin-top: 10px; margin-bottom: 10px;">
      <%= f.submit "회원가입", class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

  <%= render "devise/shared/links" %>

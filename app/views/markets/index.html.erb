<p id="notice"><%= notice %></p>

<h1>Markets</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>Size</th>
      <th>Price</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <%= form_tag search_markets_path, :method => :get do %>
      <%= text_field_tag :query, params[:query] %>
      <%= submit_tag "Search!" %>
    <% end %>
    
    <% @markets.each do |market| %>
      <tr>
        <td><%= market.id %></td>
        <td><%= market.title %></td>
        <!--<td><%= market.content %></td>-->
        <td><%= image_tag("#{market.image.thumb}") %></td>
        <td><%= market.size %></td>
        <td><%= market.price %></td>
        <td><%= link_to 'Show', market %></td>
        <td><%= link_to 'Edit', edit_market_path(market) %></td>
        <td><%= link_to 'Destroy', market, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

